<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dicePoolFragment">

    <fragment
        android:id="@+id/dicePoolFragment"
        android:name="com.example.diceroller2.dicepool.DicePoolFragment"
        android:label="fragment_dice_pool"
        tools:layout="@layout/fragment_dice_pool" >
        <action
            android:id="@+id/action_dicePoolFragment_to_chooseColorFragment"
            app:destination="@id/chooseColorFragment" />
        <action
            android:id="@+id/action_dicePoolFragment_to_statisticFragment"
            app:destination="@id/statisticFragment" />
        <action
            android:id="@+id/action_dicePoolFragment_to_presetsFragment"
            app:destination="@id/presetsFragment" />
        <action
            android:id="@+id/action_dicePoolFragment_to_packFragment"
            app:destination="@id/packFragment" />
    </fragment>
    <fragment
        android:id="@+id/chooseColorFragment"
        android:name="com.example.diceroller2.chooseColor.ChooseColorFragment"
        android:label="fragment_choose_color"
        tools:layout="@layout/fragment_choose_color" />
    <fragment
        android:id="@+id/statisticFragment"
        android:name="com.example.diceroller2.statistic.StatisticFragment"
        android:label="fragment_statistic"
        tools:layout="@layout/fragment_statistic" />
    <fragment
        android:id="@+id/presetsFragment"
        android:name="com.example.diceroller2.presets.PresetsFragment"
        android:label="fragment_presets"
        tools:layout="@layout/fragment_presets" />
    <fragment
        android:id="@+id/packFragment"
        android:name="com.example.diceroller2.pack.PackFragment"
        android:label="fragment_pack_list"
        tools:layout="@layout/fragment_pack_list" />
</navigation>